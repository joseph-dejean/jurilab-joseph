# ==============================================================================
# AUTHENTIFICATION API LÉGIFRANCE (PISTE)
# ==============================================================================
PISTE_CLIENT_ID=your-piste-client-id
PISTE_CLIENT_SECRET=your-piste-client-secret
PISTE_GRANT_TYPE=Confidentiel

# ==============================================================================
# GOOGLE CLOUD PLATFORM (Vertex AI)
# ==============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west1
GCP_DATASTORE_ID=your-datastore-id
GOOGLE_APPLICATION_CREDENTIALS=./secrets/your-service-account.json

# ==============================================================================
# HUGGING FACE (Dataset Jurisprudence)
# ==============================================================================
HF_TOKEN=your-huggingface-token
HF_DATASET_NAME=antoinejeannot/decisions-justice

# ==============================================================================
# MODÈLES GEMINI
# ==============================================================================
GEMINI_PRO_MODEL=gemini-1.5-pro-latest
GEMINI_FLASH_MODEL=gemini-1.5-flash-latest

# ==============================================================================
# MCP SERVER (Vérifications Temps Réel)
# ==============================================================================
MCP_SERVER_URL=http://localhost:3000
MCP_ENABLE=false

# ==============================================================================
# PARAMÈTRES D'INGESTION
# ==============================================================================
CHECKPOINT_INTERVAL=500
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_DELAY=0.5

# ==============================================================================
# LOGS
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/legal_rag.log
